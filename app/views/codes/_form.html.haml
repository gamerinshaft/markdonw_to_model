= form_for @code do |f|
  - if @code.errors.any?
    #error_explanation
      %h2= "#{pluralize(@code.errors.count, "error")} prohibited this code from being saved:"
      %ul
        - @code.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
