= form_for @url do |f|
  - if @url.errors.any?
    #error_explanation
      %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
      %ul
        - @url.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
