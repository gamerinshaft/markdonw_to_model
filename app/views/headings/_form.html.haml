= form_for @heading do |f|
  - if @heading.errors.any?
    #error_explanation
      %h2= "#{pluralize(@heading.errors.count, "error")} prohibited this heading from being saved:"
      %ul
        - @heading.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
