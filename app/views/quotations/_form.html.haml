= form_for @quotation do |f|
  - if @quotation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@quotation.errors.count, "error")} prohibited this quotation from being saved:"
      %ul
        - @quotation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :chapter_id
    = f.number_field :chapter_id
  .field
    = f.label :order
    = f.number_field :order
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save'
